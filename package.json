{
  "name": "fluximity",
  "version": "1.0.0",
  "description": "Yet another Flux implementation for React, focusing on minimal boilerplate and strong Typescript support",
  "main": "lib/index.js",
  "repository": "https://github.com/bearbytes/fluximity.git",
  "author": "Daniel Ebert",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "test": "jest",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "prepare": "yarn test && yarn lint && yarn build"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/recompose": "^0.26.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "immutable": "^4.0.0-rc.9",
    "jest": "^22.4.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "ts-jest": "^22.4.5",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "recompose": "^0.27.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
